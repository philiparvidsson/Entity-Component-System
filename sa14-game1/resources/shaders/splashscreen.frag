#version 430

/*------------------------------------------------
 * UNIFORMS
 *----------------------------------------------*/

layout (binding=0) uniform sampler2D SplashTex;
uniform float Fade;

/*------------------------------------------------
 * INPUTS
 *----------------------------------------------*/

in vec2 uv;

/*------------------------------------------------
 * OUTPUTS
 *----------------------------------------------*/

out vec4 frag_color;

/*------------------------------------------------
 * FUNCTIONS
 *----------------------------------------------*/

void main() {
    vec4 color0 = vec4(0.0, 0.0, 0.0, 1.0);
    vec4 color1 = vec4(1.0, 1.0, 1.0, 1.0);

    frag_color = color0*Fade + color1*(1.0-Fade);
}
