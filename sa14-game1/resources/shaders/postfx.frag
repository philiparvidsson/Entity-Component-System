#version 430

/*------------------------------------------------
 * UNIFORMS
 *----------------------------------------------*/

layout (binding=0) uniform sampler2D Tex;

/*------------------------------------------------
 * INPUTS
 *----------------------------------------------*/

in vec2 uv;

/*------------------------------------------------
 * OUTPUTS
 *----------------------------------------------*/

out vec4 frag_color;

/*------------------------------------------------
 * FUNCTIONS
 *----------------------------------------------*/

void main() {
    vec2 lol = uv;
    lol.x *= (0.9+0.1*cos(uv.y*6.0));
    lol.y *= (0.9+0.1*sin(uv.x*7.0));

    float f = cos((lol.y*uv.x) * 80.0) * 0.3 + 0.7;
    frag_color = vec4(texture(Tex, lol).rgb * vec3(f, 1.0-f, 1.0), 1.0);
}
