#version 430

/*------------------------------------------------
 * UNIFORMS
 *----------------------------------------------*/

layout(binding = 0) uniform sampler2D Tex;

/*------------------------------------------------
 * INPUTS
 *----------------------------------------------*/

in vec2 uv;

/*------------------------------------------------
 * OUTPUTS
 *----------------------------------------------*/

out vec4 color;

/*------------------------------------------------
 * FUNCTIONS
 *----------------------------------------------*/

void main() {
    color = vec4(sqrt(texture(Tex, uv).rgb), 1.0);
}
